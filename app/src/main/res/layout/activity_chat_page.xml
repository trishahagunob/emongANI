    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatPage">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavbar"
        android:layout_width="match_parent"
